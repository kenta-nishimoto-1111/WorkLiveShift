<div class="new_base">
  <div class="new_inbase ">
   <h1 class="user_appname" >Work,LiveShift</h1>
   <h1 class="user_title mb-5" >〜 企業情報を登録する 〜</h1>


    <%= form_with model: @profile, local: true do |f|%>
      <div class="fs-1 text-secondary mb-3">2/6</div>
      <div class="fs-3 mb-4">会社の基本情報を登録しましょう</div>


          <div class="container">
            <div class="row ">
              <div class="col-3">
                <div class="form-floating mb-1 location">
                  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select_box_company border-primary rounded-pill", id:"item-prefecture"})%>
                </div>
              </div>
              <div class="col-9">
                <div class="px-4">
                  <dl class="row border border-primary rounded-pill">
                    <dd class="col-sm-4 mt-4 ps-5">創立年月</dd>
                    <dd class="col-sm-7 mt-3">
                        <div class='input-birth-wrap'>
                            <%= raw sprintf(
                                  f.date_select(
                                    :hoge,
                                    class:'select-birth',
                                    id:"birth-date",
                                    use_month_numbers: true,
                                    discard_day: true,
                                    prompt:'--',
                                    start_year: 1980,
                                    end_year: (Time.now.year),
                                    date_separator: '%s'),
                                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                        </div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>


          <div class="p-3">
            <div class="form-floating">
              <%= f.text_field :last_name , class:"form-control border border-primary rounded-pill" , id:"floatingInput" , placeholder:"name@example.com" %>
              <label for="floatingInput">電話番号</label>
            </div>
          </div>

          <div class="p-3">
            <div class="form-floating">
              <%= f.text_field :last_name , class:"form-control border border-primary rounded-pill" , id:"floatingInput" , placeholder:"name@example.com" %>
              <label for="floatingInput">会社HP</label>
            </div>
          </div>


      <div class="col-12 mb-5">
        <%= f.submit "次へ" ,class:"btn btn-primary float-end mb-5" %>
      </div>

    <% end %>

  </div>
</div>
<div class="card bg-dark text-white">
  <%= image_tag 'blue_00004', class: 'card-img-top bg-dark' , :size =>'0x400'%>
    <div class="card-img-overlay">

          <%# トップページのヘッダーの画像部分 %>
        <nav class="navbar navbar-light">
          <div class="container-fluid" >
            <div class="navbar-brand"></div>
            <div class="d-flex ">

                 <%# ヘッダーのログインなどのリンク %>
              <% if user_signed_in %>

                <div class="balloonoya">
                    <%= link_to(user_path(current_user.id), class: "d-flex justify-content-end d-flex align-items-center mt-1") do %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-circle mx-3 text-white" viewBox="0 0 16 16">
                      <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                      <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                      </svg>
                    <% end %>
                  <span class="balloon text-center text-dark">ユーザーページへ</span>
                </div>

                <%= link_to(destroy_user_session_path, method: :delete, class: "text-decoration-none")  do %>
                  <div class="border border-white rounded-pill btn-outline-success d-flex justify-content-end d-flex align-items-center mx-3 p-2">
                      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-check-fill text-white" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                      <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                      </svg>
                      <span class="text-white ms-2">ログアウト</span>
                  </div>
                <% end %>

              <% else %>

                <%= link_to(new_user_session_path, class: "text-decoration-none")  do %>
                  <div class="border border-white rounded-pill btn-outline-success d-flex justify-content-end d-flex align-items-center mx-3 p-2">
                      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-check-fill text-white" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                      <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                      </svg>
                      <span class="text-white ms-2">ログイン</span>
                  </div>
                <% end %>

                <%= link_to(new_user_registration_path, class: "text-decoration-none") do %>
                  <div class="border border-white rounded-pill btn-outline-success d-flex justify-content-end d-flex align-items-center mx-3 p-2">
                      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-plus-fill text-white" viewBox="0 0 16 16">
                      <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                      <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                      </svg>
                      <span class="text-white ms-2">新規登録</span>
                  </div>
                <% end %>
              <% end %>

            </div>
          </div>
        </nav>

          <%# 画像部分の文字 %>
        <div class="d-flex justify-content-center text-center mt-5">
          <div class="text-white fs-1 navbar-brand">
          Work,LiveShift
          <p class="text-white fs-5 mt-3">あなたに合った仕事が見つかる</p>
          </div>
        </div>
    </div>
  </div>




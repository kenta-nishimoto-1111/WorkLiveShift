<%= render "shared/header_signin"%>


<div class="company_show">


    <%# 画像のスライドショー部分 %>
    <div id="carouselExampleFade" class="carousel slide carousel-fade shadow-lg mb-5 bg-white rounded" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag 'column-case015-01.png', class: 'd-block w-100 rounded-3' , :size =>'700x500'%>
        </div>
        <div class="carousel-item">
          <%= image_tag 'cool.jpeg', class: 'd-block w-100 rounded-3' , :size =>'700x500'%>
        </div>
        <div class="carousel-item">
          <%= image_tag 'test.png', class: 'd-block w-100 rounded-3' , :size =>'700x500'%>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>
    </div>

    <div class="d-flex justify-content-end mt-5">
      <%# 企業名 %>
      <h1 class="fw-bolder mx-5"><%= @company.my_company_name %></h1>
      <%# お気に入りのボタン %>
      <div class="d-flex justify-content-end">
        <button class="border border-white rounded-pill bg-primary bg-gradient my-3">  
          <%= link_to 'お気に入りにする', company_favorites_path(@company.id), method: :post, class: "text-decoration-none text-white" %>
        </button>
      </div>
    </div>

     <%# 情報部分 %>
    <div class="container" >
      <div class="row d-flex justify-content-center mt-5">
         
        <div class="col-9 px-5 ">
          <div>
            <h2 class="mb-5 text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-check2-circle me-2" viewBox="1 1 15 15">
                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
              </svg>何をやるのか</h2>
              <div class="line_break sentence_interval"><%= @company.company_content %></div>
              <hr align="center" class="my-5">

            <h2 class="my-5 text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-check2-circle me-2" viewBox="1 1 15 15">
                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
              </svg>なぜやるのか</h2>
              <div class="line_break sentence_interval"><%= @company.company_purpose %></div>
              <hr align="center" class="my-5">

            <h2 class="my-5 text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-check2-circle me-2" viewBox="1 1 15 15">
                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
              </svg>どうやっているのか</h2>
              <div class="line_break sentence_interval"><%= @company.company_environment %></div>
          </div>
        </div>


        <div class="col-3 border-start ps-5">
          <h2 class="mb-4 fs-4 text-secondary">会社情報</h2>

          <p>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-house-door" viewBox="0 0 18 20">
              <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z"/>
            </svg>
            <%= @company.my_company_name %>
          </p>

          <p>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-geo-alt-fill me-1" viewBox="0 0 18 20">
            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
            </svg>所在地：<%= @company.prefecture.name %>
          </p>

          <p>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-flag-fill" viewBox="0 0 18 20">
              <path d="M14.778.085A.5.5 0 0 1 15 .5V8a.5.5 0 0 1-.314.464L14.5 8l.186.464-.003.001-.006.003-.023.009a12.435 12.435 0 0 1-.397.15c-.264.095-.631.223-1.047.35-.816.252-1.879.523-2.71.523-.847 0-1.548-.28-2.158-.525l-.028-.01C7.68 8.71 7.14 8.5 6.5 8.5c-.7 0-1.638.23-2.437.477A19.626 19.626 0 0 0 3 9.342V15.5a.5.5 0 0 1-1 0V.5a.5.5 0 0 1 1 0v.282c.226-.079.496-.17.79-.26C4.606.272 5.67 0 6.5 0c.84 0 1.524.277 2.121.519l.043.018C9.286.788 9.828 1 10.5 1c.7 0 1.638-.23 2.437-.477a19.587 19.587 0 0 0 1.349-.476l.019-.007.004-.002h.001"/>
            </svg>
            設立：<%="#{@company.founding_date.year}年#{@company.founding_date.month}月" %>
          </p>

          <p>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 18 20">
              <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
            </svg>
            Tel：<%= @company.phone_number %>
          </p>

          <p>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-link-45deg" viewBox="0 0 18 20">
              <path d="M4.715 6.542L3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.001 1.001 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z"/>
              <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 0 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 0 0-4.243-4.243L6.586 4.672z"/>
            </svg>
            HP：<%= @company.company_url %>
          </p>
          
          <hr align="center" class="my-5">

          <h2 class="my-5 fs-4 text-secondary">希望している職種</h2>
          <%# <% @company.ingredients do |ingredient| %>
            <%# <%= ingredient %>
          <%# <% end %>
        </div>
      </div>
    </div>





</div>


<%= render "shared/footer"%>


  <%# エントリーするボタン %>
<div class="d-flex justify-content-center">
  <button class="fixed_btn border border-white rounded-pill bg-gradient ">  
    <%= link_to 'エントリーする', root_path, class: "text-decoration-none text-white" %>
  </button>
</div>

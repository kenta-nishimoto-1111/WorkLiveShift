<div class="prfnew_base">
  <div class="prfnew_inbase ">
   <h1 class="user_appname" >Work,LiveShift</h1>
   <h1 class="user_title mb-5" >〜 基本情報を追加する 〜</h1>


  <%= form_with model: @profile, local: true do |f|%>

    <dl class="row">
      <dt class="col-sm-4 mb-3">年齢</dt>
      <dd class="col-sm-2 mb-3">
        <%= f.text_field :age , class:"form-control" , id:"floatingInput" %>
      <dd class="col-sm-4 mb-3 mt-2">歳</dd>
      </dd>

      <dt class="col-sm-4 mt-2">生年月日</dt>
      <dd class="col-sm-8 ">
          <div class='input-birth-wrap'>
               <%= raw sprintf(
                    f.date_select(
                      :birth_date,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
           </div>
       </dd>

      <dt class="col-sm-4 mb-4">居住地</dt>
      <dd class="col-sm-8 mb-4">
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"})%>
      </dd>

      <dt class="col-sm-4 mb-4">長所・強み</dt>
      <dd class="col-sm-8 mb-4">
      <div class="mb-3">
      <%= f.text_area :strong_point , class:"form-control" , id:"floatingInput" %>
      </div>
      </dd>

      <dt class="col-sm-4 mb-3">これからやってみたいこと</dt>
      <dd class="col-sm-8 mb-3">
      <div class="mb-3">
      <%= f.text_area :dream , class:"form-control" , id:"floatingInput" %>
      </div>
      </dd>
    </dl>

      <div class="col-12">
      <%= f.submit "保存する" ,class:"btn btn-primary float-end mb-5" %>
    <%# <button type="submit" class="btn btn-primary float-end ">情報を登録して性格診断へ進む</button> %>
      </div>

    <% end %>
  </div>
</div>
<div class="notification overflow-auto">
  <% if @supplier_notifications.present? %>
    <% @supplier_notifications.each do |notification| %>
      <% if notification.notification_type == "message" %>
        <%= link_to "#{notification.user.family_name}さんからメッセージが届きました", supplier_chat_path(notification.user.id), class: "dropdown-item me-4 notification-list border border-primary rounded-1 border-2"%>
      <% elsif notification.notification_type == "entry" %>
        <%= link_to "#{notification.user.family_name}さんからエントリーが届きました。メッセージを送信しましょう！", new_supplier_chat_path, class: "dropdown-item me-4 notification-list border border-primary rounded-1 border-2"%>
      <% end %>
    <% end %>
  <% else %>
    <div class="d-flex justify-content-center mt-5" >
      <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-exclamation-circle mx-3" viewBox="0 0 16 16">
       <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
       <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
      </svg>
      <div class="fs-4 mt-1">現在通知はありません</div>
    </div>  
  <% end %>
</div>
<%# 一つ一つのメッセージが表示されているビュー %>

<div class="message overflow-auto">
  <% @messages.each do |message| %>
    <% if message.sent_person == current_user.family_name%>
      <div class="d-flex align-items-center d-flex justify-content-end ">
        <div class="d-flex flex-column">
          <div class="balloon1-right">
            <%= simple_format(h message.content) %>
          </div>
          <div class="d-flex justify-content-end me-3">
            <%= l message.created_at, format: '%-m/%-d %H:%M' %>
          </div>
        </div>
        <%= image_tag message.chat.user.image, class: 'rounded-circle me-3', :size =>'55x55'%>
      </div>
    <% else %>
      <div class="d-flex align-items-center">
        <%= image_tag message.chat.supplier.company_image, class: 'rounded-circle ms-3', :size =>'55x55'%>
        <div class="d-flex flex-column">
          <div class="balloon1-left">
            <%= simple_format(h message.content) %>
          </div>
          <div class="ms-3">
            <%= l message.created_at, format: '%-m/%-d %H:%M' %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
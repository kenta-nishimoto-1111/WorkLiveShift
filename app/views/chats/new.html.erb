<div class="new_base">
  <div class="new_inbase ">
   <h1 class="appname" >Work,LiveShift</h1>
   <h1 class="user_title mb-5" >〜 チャットを始める 〜</h1>
    <%=form_with model: @chat, local: true do |f|%>
      <div class="d-flex justify-content-center">
        <select name="chat[user_id]" class="select-box  border border-primary rounded-pill my-5">
          <option value="">チャットするユーザーを選択してください</option>
            <% @entries.each do |entry| %>
              <option value=<%= entry.user.id %>> <%= entry.user.family_name %><%= entry.user.last_name %> 様 </option>
            <% end %>
        </select>
      </div>
      <%= f.submit "チャットを始める" ,class:"btn btn-primary float-end mb-5" %>
    <% end %>
  </div>
</div>
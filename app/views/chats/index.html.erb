<div class="chat border">
  <div class="chat-header d-flex align-items-center">
    <div class="header_left py-4 ps-3 border text-secondary">メッセージ</div>
    <div class="header_right text-center py-4 border">企業名</div>
  </div>

  <div class="d-flex align-items-center">
    <div class="chat_list border">
      <% current_user.chats.each do |chat| %>
        <div class="chat_partner border-bottom">
          <%= link_to chat.company.my_company_name, chat_path(chat), class: "text-decoration-none text-dark" %>
        </div>
      <% end %>
    </div>

    <div class="main">
        <div class="message overflow-auto">
          <div class="d-flex align-items-center">
            <%= image_tag current_user.image, class: 'rounded-circle ms-3', :size =>'55x55'%>
            <div class="balloon1-left">
              <p>こんにちは。これは例です。</p>
            </div>
          </div>

          <div class="d-flex align-items-center d-flex justify-content-end ">
            <div class="balloon1-right">
              <p>こんにちは。これは例です。</p>
            </div>
            <%= image_tag current_user.image, class: 'rounded-circle me-3', :size =>'55x55'%>
          </div>
          
        </div>


      <div class="chat_form border-top d-flex align-items-center">
        <div class="form-input border border-primary rounded-pill"></div>
        <div class="form-submit border border-primary rounded-pill mx-auto text-center">送信</div>
      </div>
    </div>

  </div>
</div>
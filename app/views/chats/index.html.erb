<%= render "shared/header_signin"%>

<div class="chat border">
  <div class="chat-header d-flex align-items-center">
    <div class="header_left py-4 ps-3 border text-secondary">メッセージ</div>
    <div class="header_right text-center py-4 border">メッセージをやり取りたい人を選択してください</div>
  </div>

  <div class="d-flex align-items-center">
    <div class="chat_list border">
      <% current_user.chats.order(latest_message_time: :desc).each do |chat| %>
        <div class="chat_partner border-bottom pt-2 ps-2">
          <%= link_to chat.supplier.company_name, chat_path(chat), class: "text-decoration-none text-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


